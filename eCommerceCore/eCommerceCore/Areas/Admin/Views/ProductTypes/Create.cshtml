@model eCommerceCore.Models.ProductTypes
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create Product Type</h2>

<form method="post" asp-action="Create" style="border:1px solid green;padding:30px;border-radius:10px;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" placeholder="Enter Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Create" />
    <a asp-action="Index" class="btn btn-success">Back To List</a>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
