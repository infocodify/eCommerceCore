@model eCommerceCore.Models.ProductTypes

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete Product Type</h2>

<form method="post" asp-action="Delete" style="border:1px solid green;padding:30px;border-radius:10px;">

