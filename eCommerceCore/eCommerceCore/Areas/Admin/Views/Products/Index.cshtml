@model IEnumerable<eCommerceCore.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<br /><br />

@if (@TempData["message"] != null)
{
    <div class=" alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["message"]
    </div>

}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Products</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Product </a>
    </div>
</div>

<div>
    <table class="table table-striped">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Image)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Available)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ProductTypes)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SpecialTags)
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model.OrderByDescending(item => item.DateCreated))
        {

        <tr>
            <td>
                <img src="@Url.Content(item.Image)" class="img-thumbnail" style="width:100px;height:100px;">
            </td>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                @Html.DisplayFor(m => item.Available)
            </td>
            <td>
                @Html.DisplayFor(m => item.ProductTypes.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.SpecialTags.Name)
            </td>

            @await Html.PartialAsync("_TableButtonPartial", item.Id)

        </tr>
        }
    </table>
</div>


